{
  "compilerOptions": {
    "target": "es2022",
    "module": "esNext",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "useDefineForClassFields": false,
    "alwaysStrict": true,
    "allowJs": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}